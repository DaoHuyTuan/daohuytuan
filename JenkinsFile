#!/usr/bin/env groovy
node {
    stage('SMC Checkout') {
        git 'https://github.com/DaoHuyTuan/daohuytuan'
    }
    stage('Complie package'){
        sh 'npm install'
    }
}
pipeline {

    agent any

    stages {
        stage('Pull') {
            steps {
                echo 'Pulling...'
                sh 'git pull origin'
                
            }
        }
        stage('Install') {
            steps {
                echo 'Installing package...'
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'npm run build'
            }
        }
    }
}
